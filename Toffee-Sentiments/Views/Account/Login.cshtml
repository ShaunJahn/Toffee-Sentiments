@model LoginViewModel

<h2>Please log in before placing an order.</h2>
<div class="container-fluid col" style="position: sticky;">
        <h1 style="color:white">Login now</h1>
        <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" role="form">
            <h4 style="color:white;">Enter your details below</h4>

            <input type="hidden" asp-for="ReturnUrl" />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="UserName" class="col-md-2 control-label" style="color:white;"></label>
                <div class="col-md-10">
                    <input asp-for="UserName" class="form-control" style="width:20%" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="col-md-2 control-label" style="color:white;"></label>
                <div class="col-md-10">
                    <input asp-for="Password" class="form-control" style="width:20%" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-primary" value="Log in" />
                </div>
            </div>

        </form>

</div>
<a class="btn btn-primary" asp-controller="Account" asp-action="Register" style="position: sticky;">Register now</a>
